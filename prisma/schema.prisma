// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  login         String    @unique
  password      String
  active        Boolean
  createdAt     DateTime
  updatedAt     DateTime?
  deactivatedAt DateTime?
  songs         Song[]
}

model Song {
  id          String  @id
  name        String
  album       String
  artist      String
  genre       String
  year        String
  cover_image String?
  song_url    String
  user        User    @relation(fields: [userId], references: [id])
  userId      String
}
